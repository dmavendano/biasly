{
  "manifest_version": 3,
  "name": "Biasly",
  "version": "1.0",
  "description": "Grammarly for Political Bias - Have AI Analyze and Correct political bias on any webpage",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "message.html",
        "styles.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "scripting"
  ]
}

